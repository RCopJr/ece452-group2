<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <EditText
        android:id="@+id/etSetTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_no_underline"
        android:ellipsize="end"
        android:hint="Enter Set Title"
        android:padding="6dp"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/setCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSetWeight"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_no_underline"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:hint="W"
        android:padding="6dp"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/setCheckBox"
        app:layout_constraintEnd_toStartOf="@+id/etSetReps"
        app:layout_constraintStart_toEndOf="@+id/etSetTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSetReps"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_no_underline"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:hint="R"
        android:padding="6dp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/setCheckBox"
        app:layout_constraintRight_toLeftOf="@id/setCheckBox"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/setCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/etSetReps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>